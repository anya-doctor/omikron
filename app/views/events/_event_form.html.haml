- modal ||= false
- remote = modal ? true : false
= simple_nested_form_for(@event, remote: remote, html: {role: :form, 'data-model' => 'event'}) do |f|
  = render 'shared/error_messages', object: f.object
  = f.association :event_type, label_method: :name, value_method: :id,
    include_blank: false, selected: params[:event_type_id]
  = f.input :name
  = f.input :first_side
  = f.input :second_side
  = f.input :datetime_start, default: Time.now
  = f.input :count, default: "0-0"
  = f.input :complete, label: false, inline_label: 'Completed?'
  = f.simple_fields_for :complete_type do |ct_form|
    / /- if ct_form.object.new_record?
    = ct_form.input :result, include_blank: false
    = ct_form.input :description, as: :text
  = f.submit "Save", class: "btn btn-primary"