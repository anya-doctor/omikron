= simple_nested_form_for @event, remote: true, html: { class: "form-horizontal" } do |f|
  -#= render 'shared/error_messages', object: f.object
  .modal-body
    %ul.errors
    = f.association :event_type
    = f.input :name
    = f.input :first_side
    = f.input :second_side
    = f.input :datetime_start, default: Time.now
    = f.input :count, default: "0-0"
    = f.input :complete, label: false, inline_label: 'Completed?'
    = f.simple_fields_for :complete_type do |ct_form|
      / /- if ct_form.object.new_record?
      = ct_form.input :result, include_blank: false
      = ct_form.input :description, as: :text
  .modal-footer
    = f.submit class: "btn btn-primary"
    = link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"}