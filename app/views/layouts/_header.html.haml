%nav.navbar.navbar-inverse.navbar-fluid-top.navbar-default{:role => "navigation"}
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-main", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Omikron", root_path, :class => "navbar-brand"
    #bs-main.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li.active= link_to "Home", root_path
        %li= link_to "Events", events_path
        %li= link_to "Archive", archive_path
        %li= link_to "Help", help_path
        %li= link_to "About", about_path
          
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          - if current_user.role.admin?
            %li= link_to "Categories", event_types_path
            %li= link_to "Users", users_path
          %li= link_to current_user.email, user_path(current_user)
          %li= link_to "Balance: #{number_to_currency(current_user.balance)}", user_path(current_user)
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              Account
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to "My Account", user_path(current_user)
              %li= link_to "Edit Profile", edit_user_registration_path
              %li.divider
              %li= link_to "Logout", destroy_user_session_path, method: :delete, class: 'dialog'
        - else
          %li= link_to "Login", new_user_session_path
          %li= link_to "Sign up", new_user_registration_path
